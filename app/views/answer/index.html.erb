    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <h3 class="text-center">Ask Another Question!</h2>
        <div class="text-center">
          <%= form_tag({controller: "answer", action: "index"}, method: :get, class: "form-inline") do %>
            <%= text_field_tag :query, nil, class: "form-control"  %>
            <%= submit_tag 'Ask', name: nil, class: "btn btn-default" %>
