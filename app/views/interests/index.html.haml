.container
  .row
    .col-sm-12
      - @interests.each do |interest|
        .interest.margin-top
          = image_tag interest.image.url(:medium)
          %p= interest.name.capitalize
          = form_for interest, :html => { :multipart => true } do |form|
            = form.file_field :image
            = form.submit 'Update Image', class: 'btn btn-primary'
